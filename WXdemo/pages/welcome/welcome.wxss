page {
  height: 100%;
  background: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-box {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
}

.moto {
  font-size: 22rpx;
  font-weight: 600;
  color: #405f80;
  line-height: 80rpx;
}

.moto-container {
  width: 200rpx;
  height: 80rpx;
  margin-top: 200rpx;
  border-radius: 5px;
  text-align: center;
  border: 1px solid #405f80;
}
