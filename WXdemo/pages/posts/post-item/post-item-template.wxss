.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  background: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post_author_data {
  display: flex;
  align-items: center;
  margin: 10rpx 0 20rpx 10rpx;
}

.post_author {
  width: 60rpx;
  height: 60rpx;
}

.post_data {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.post_title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
  color: #333;
}

.post_images {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
  color: #999;
}